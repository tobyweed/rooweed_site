    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        function navbar(){            
            
            $(window).scroll(function(){
                var fromTop = $(window).scrollTop()+100;
                var about = $("#about").offset().top;
                if (fromTop >= about) {
                    $(".navbar").addClass("navbar-sticky");
                    $(".navbar").removeClass("navbar-bottom");
                } else {
                    $(".navbar").removeClass("navbar-sticky");
                    $(".navbar").addClass("navbar-bottom");
                }
                  
                var navItems = $("navbar").find("a"),
                    about = $("#about-link").offset().top,
                    resume = $("#resume").offset().top,
                    contact = $("#contact").offset().top;
                    
                      
                    if(fromTop >= about && fromTop <= resume) {
                        $('a[href="#about"]').css("color","grey");
                    } else if (fromTop >= resume && fromTop <= contact) {
                        $('a[href="#resume"]').css("color","grey");
                    } else if (fromTop >= contact) {
                        $('a[href="#contact"]').css("color","grey");
                    }
                });
            };
    </script>
<body onLoad="navbar()">

